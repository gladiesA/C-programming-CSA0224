#include <stdio.h>
#include <math.h>

int main() {
    int binary, decimal = 0, octal = 0;
    int i = 0, rem;

    printf("Enter a binary number: ");
    scanf("%d", &binary);

    /* Binary to Decimal */
    while(binary != 0) {
        rem = binary % 10;
        decimal += rem * pow(2, i);
        binary = binary / 10;
        i++;
    }

    /* Decimal to Octal */
    i = 1;
    while(decimal != 0) {
        octal += (decimal % 8) * i;
        decimal = decimal / 8;
        i *= 10;
    }

    printf("Octal equivalent = %d", octal);

    return 0;
}
